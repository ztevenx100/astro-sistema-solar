---
// Componente de navegación entre secciones
---

<div class="section-navigation">
  <!-- Indicador de sección actual -->
  <div class="section-indicator">
    <div class="indicator-dot active" data-section="solar-system"></div>
    <div class="indicator-dot" data-section="constellations"></div>
  </div>

  <!-- Navegación flotante -->
  <nav class="floating-nav">
    <button class="nav-btn active" data-target="solar-system-section">
      <span class="nav-icon">☀️</span>
      <span class="nav-label">Sistema Solar</span>
    </button>
    <button class="nav-btn" data-target="constellations-section">
      <span class="nav-icon">⭐</span>
      <span class="nav-label">Constelaciones</span>
    </button>
  </nav>

  <!-- Botón de scroll hacia abajo -->
  <button class="scroll-hint" id="scroll-down-btn">
    <div class="scroll-arrow">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M7 14L12 19L17 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    <span class="scroll-text">Explorar Constelaciones</span>
  </button>
</div>

<style>
  .section-navigation {
    position: fixed;
    left: 2rem;
    bottom: 8rem;
    z-index: 900; /* Reducido para evitar conflictos */
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .section-indicator {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .indicator-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .indicator-dot.active {
    background: #87CEEB;
    box-shadow: 0 0 20px rgba(135, 206, 235, 0.5);
    transform: scale(1.2);
  }

  .floating-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    background: rgba(0, 10, 20, 0.9);
    backdrop-filter: blur(15px);
    border-radius: 15px;
    padding: 1rem;
    border: 1px solid rgba(135, 206, 235, 0.2);
  }

  .nav-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: transparent;
    border: none;
    border-radius: 10px;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    cursor: pointer;
    text-align: left;
    white-space: nowrap;
  }

  .nav-btn:hover {
    background: rgba(135, 206, 235, 0.1);
    color: white;
    transform: translateX(-2px);
  }

  .nav-btn.active {
    background: rgba(135, 206, 235, 0.2);
    color: #87CEEB;
  }

  .nav-icon {
    font-size: 1.2rem;
    min-width: 24px;
  }

  .nav-label {
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .scroll-hint {
    position: fixed;
    bottom: 2rem;
    right: 50%; /* Cambiado de left a right para evitar solapamiento */
    transform: translateX(50%); /* Ajustado para centrar desde la derecha */
    background: rgba(0, 10, 20, 0.9);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(135, 206, 235, 0.3);
    border-radius: 50px;
    padding: 1rem 1.5rem;
    color: #87CEEB;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    animation: bounce 2s infinite;
    z-index: 850; /* Asegurar que esté visible */
  }

  .scroll-hint:hover {
    background: rgba(135, 206, 235, 0.1);
    transform: translateX(50%) translateY(-2px); /* Ajustado para la nueva posición */
    box-shadow: 0 5px 20px rgba(135, 206, 235, 0.3);
  }

  .scroll-arrow {
    animation: arrow-bounce 1.5s infinite;
  }

  .scroll-text {
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    font-weight: 500;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(50%) translateY(0); /* Ajustado para la nueva posición */
    }
    40% {
      transform: translateX(50%) translateY(-5px);
    }
    60% {
      transform: translateX(50%) translateY(-3px);
    }
  }

  @keyframes arrow-bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(2px);
    }
    60% {
      transform: translateY(1px);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-navigation {
      left: 1rem;
      bottom: 6rem;
    }

    .floating-nav {
      padding: 0.75rem;
    }

    .nav-btn {
      padding: 0.5rem 0.75rem;
    }

    .nav-label {
      display: none;
    }

    .scroll-hint {
      bottom: 1rem;
      padding: 0.75rem 1rem;
    }

    .scroll-text {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navBtns = document.querySelectorAll('.nav-btn');
    const indicatorDots = document.querySelectorAll('.indicator-dot');
    const scrollHint = document.getElementById('scroll-down-btn');
    
    // Función para scroll suave a sección
    const scrollToSection = (sectionId: string) => {
      const section = document.getElementById(sectionId);
      if (section) {
        section.scrollIntoView({ behavior: 'smooth' });
      }
    };

    // Event listeners para botones de navegación
    navBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const targetSection = btn.getAttribute('data-target');
        if (targetSection) {
          scrollToSection(targetSection);
        }
      });
    });

    // Event listeners para indicadores
    indicatorDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        const sections = ['solar-system-section', 'constellations-section'];
        scrollToSection(sections[index]);
      });
    });

    // Scroll hint para ir a constelaciones
    scrollHint?.addEventListener('click', () => {
      scrollToSection('constellations-section');
    });

    // Observer para actualizar navegación activa
    const observerOptions = {
      threshold: 0.6,
      rootMargin: '0px 0px -20% 0px'
    };

    const updateActiveSection = (entries: IntersectionObserverEntry[]) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const sectionId = entry.target.id;
          
          // Actualizar botones de navegación
          navBtns.forEach(btn => {
            btn.classList.remove('active');
            if (btn.getAttribute('data-target') === sectionId) {
              btn.classList.add('active');
            }
          });

          // Actualizar indicadores
          indicatorDots.forEach((dot, index) => {
            dot.classList.remove('active');
            const sections = ['solar-system-section', 'constellations-section'];
            if (sections[index] === sectionId) {
              dot.classList.add('active');
            }
          });

          // Ocultar scroll hint cuando llegue a constelaciones
          if (sectionId === 'constellations-section') {
            scrollHint?.style.setProperty('opacity', '0');
            scrollHint?.style.setProperty('pointer-events', 'none');
          } else {
            scrollHint?.style.setProperty('opacity', '1');
            scrollHint?.style.setProperty('pointer-events', 'auto');
          }
        }
      });
    };

    const observer = new IntersectionObserver(updateActiveSection, observerOptions);
    
    // Observar las secciones
    const sections = document.querySelectorAll('.section-container');
    sections.forEach(section => observer.observe(section));
  });
</script>
