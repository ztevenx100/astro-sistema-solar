---
// Componente de navegación entre secciones
---

<div class="section-navigation">
  <!-- Navegación flotante -->
  <nav class="floating-nav">
    <button class="nav-btn active" data-target="solar-system-section" aria-label="Ir a sección Sistema Solar">
      <span class="nav-icon">☀️</span>
      <span class="nav-label">Sistema Solar</span>
    </button>
    <button class="nav-btn" data-target="constellations-section" aria-label="Ir a sección Constelaciones">
      <span class="nav-icon">⭐</span>
      <span class="nav-label">Constelaciones</span>
    </button>
  </nav>
</div>

<style>
  .section-navigation {
    position: fixed;
    left: 2rem;
    bottom: 8rem;
    z-index: 900; /* Reducido para evitar conflictos */
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .floating-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    background: rgba(0, 10, 20, 0.9);
    backdrop-filter: blur(15px);
    border-radius: 15px;
    padding: 1rem;
    border: 1px solid rgba(135, 206, 235, 0.2);
  }

  .nav-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: transparent;
    border: none;
    border-radius: 10px;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    cursor: pointer;
    text-align: left;
    white-space: nowrap;
  }

  .nav-btn:hover {
    background: rgba(135, 206, 235, 0.1);
    color: white;
    transform: translateX(-2px);
  }

  .nav-btn.active {
    background: rgba(135, 206, 235, 0.2);
    color: #87CEEB;
  }

  .nav-icon {
    font-size: 1.2rem;
    min-width: 24px;
  }

  .nav-label {
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-navigation {
      left: 1rem;
      bottom: 6rem;
    }

    .floating-nav {
      padding: 0.75rem;
    }

    .nav-btn {
      padding: 0.5rem 0.75rem;
    }

    .nav-label {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navBtns = document.querySelectorAll('.nav-btn');
    
    // Función para scroll suave a sección
    const scrollToSection = (sectionId: string) => {
      const section = document.getElementById(sectionId);
      if (section) {
        section.scrollIntoView({ behavior: 'smooth' });
      }
    };

    // Event listeners para botones de navegación
    navBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const targetSection = btn.getAttribute('data-target');
        if (targetSection) {
          scrollToSection(targetSection);
        }
      });
    });

    // Observer para actualizar navegación activa
    const observerOptions = {
      threshold: 0.6,
      rootMargin: '0px 0px -20% 0px'
    };

    const updateActiveSection = (entries: IntersectionObserverEntry[]) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const sectionId = entry.target.id;
          
          // Actualizar botones de navegación
          navBtns.forEach(btn => {
            btn.classList.remove('active');
            if (btn.getAttribute('data-target') === sectionId) {
              btn.classList.add('active');
            }
          });
        }
      });
    };

    const observer = new IntersectionObserver(updateActiveSection, observerOptions);
    
    // Observar las secciones
    const sections = document.querySelectorAll('.section-container');
    sections.forEach(section => observer.observe(section));
  });
</script>
