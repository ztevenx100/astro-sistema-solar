<style>
  .site-footer {
    background: linear-gradient(180deg, #000011 0%, #0a0020 50%, #1a0033 100%);
    color: rgba(255, 255, 255, 0.85);
    padding: 2rem 1.5rem 1rem;
    border-top: 1px solid rgba(135, 206, 235, 0.2);
    position: relative;
    z-index: 100;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .footer-title {
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    font-weight: 700;
    color: #87CEEB;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(135, 206, 235, 0.5);
  }

  .footer-description {
    font-size: 0.75rem;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.7);
  }

  .footer-subtitle {
    font-family: 'Space Mono', monospace;
    font-size: 0.85rem;
    font-weight: 600;
    color: #FFD700;
    margin-bottom: 0.75rem;
    text-shadow: 0 0 8px rgba(255, 215, 0, 0.4);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links li a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.8rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .footer-links li a:hover {
    color: #87CEEB;
    transform: translateX(5px);
    text-shadow: 0 0 8px rgba(135, 206, 235, 0.6);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background: rgba(135, 206, 235, 0.1);
    border: 1px solid rgba(135, 206, 235, 0.2);
  }

  .social-link:hover {
    color: #87CEEB;
    background: rgba(135, 206, 235, 0.2);
    border-color: #87CEEB;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(135, 206, 235, 0.3);
  }

  .footer-bottom {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(135, 206, 235, 0.1);
    max-width: 1200px;
    margin: 0 auto;
  }

  .copyright {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.5rem;
    font-family: 'Space Mono', monospace;
  }

  .credits {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.5);
    font-style: italic;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      text-align: center;
    }

    .footer-links {
      align-items: center;
    }

    .social-links {
      justify-content: center;
    }

    .footer-links li a:hover {
      transform: translateX(0) scale(1.05);
    }
  }

  @media (max-width: 480px) {
    .site-footer {
      padding: 1.5rem 1rem 0.75rem;
    }

    .footer-title {
      font-size: 0.9rem;
    }

    .footer-subtitle {
      font-size: 0.8rem;
    }
  }
</style>
