---
import Layout from '../../layouts/Layout.astro';
import { planetsData } from '../../data/planets';
import PlanetComparison from '../../components/PlanetComparison.astro';
import ScientificData from '../../components/ScientificData.astro';
import DataVisualization from '../../components/DataVisualization.astro';
import SpaceMissions from '../../components/SpaceMissions.astro';
import PlanetNavigation from '../../components/PlanetNavigation.astro';

export async function getStaticPaths() {
  return planetsData.map(planet => ({
    params: { planet: planet.id },
    props: { planet }
  }));
}

const { planet } = Astro.props;
---

<Layout title={`${planet.name} - Sistema Solar Interactivo`}>
  <main class="min-h-screen relative overflow-x-hidden">
    
    <!-- Header with planet visualization -->
    <section class="planet-header relative h-screen flex items-center justify-center">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black-rgba to-black"></div>
      
      <!-- Large planet visualization -->
      <div class="planet-display relative z-10">
        <div 
          class="planet-large w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 rounded-full relative overflow-hidden shadow-2xl"
          style={`background: radial-gradient(circle at 30% 30%, ${planet.color}, ${planet.color}88, ${planet.color}44);`}
        >
          <div class="absolute inset-0 rounded-full bg-gradient-to-br from-white from-10% via-transparent to-black to-90% opacity-20"></div>
          <div class="absolute inset-0 rounded-full animate-spin-slow">
            <div class="w-full h-full rounded-full" style={`background: linear-gradient(45deg, transparent 40%, ${planet.color}33 50%, transparent 60%);`}></div>
          </div>
        </div>
      </div>
      
      <!-- Planet name and basic info -->
      <div class="absolute bottom-20 left-1/2 transform -translate-x-1/2 text-center z-20">
        <h1 class="font-space text-5xl md:text-7xl font-bold text-white mb-4">{planet.name}</h1>
        <p class="text-xl md:text-2xl text-gray-300">{planet.englishName}</p>
      </div>
      
      <!-- Back button -->
      <a 
        href="/"
        class="fixed top-6 left-6 glass-effect rounded-full p-3 z-30 hover:bg-white hover:bg-opacity-20 transition-all duration-200 group"
      >
        <svg class="w-6 h-6 text-white group-hover:transform group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      </a>
    </section>
    
    <!-- Content sections -->
    <section class="content-sections relative z-10 bg-black">
      
      <!-- Quick facts -->
      <div class="quick-facts py-16 px-6">
        <div class="max-w-6xl mx-auto">
          <h2 class="font-space text-3xl md:text-4xl font-bold text-center text-star mb-12">Datos Clave</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            
            <div class="fact-card glass-effect rounded-xl p-6 text-center hover:transform hover:scale-105 transition-all duration-300">
              <div class="icon-container w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="font-space font-bold text-white text-lg mb-2">Distancia del Sol</h3>
              <p class="text-gray-300">{planet.distance}</p>
            </div>
            
            <div class="fact-card glass-effect rounded-xl p-6 text-center hover:transform hover:scale-105 transition-all duration-300">
              <div class="icon-container w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-purple-400 to-purple-600 flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="font-space font-bold text-white text-lg mb-2">Período Orbital</h3>
              <p class="text-gray-300">{planet.orbitalPeriod}</p>
            </div>
            
            <div class="fact-card glass-effect rounded-xl p-6 text-center hover:transform hover:scale-105 transition-all duration-300">
              <div class="icon-container w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <h3 class="font-space font-bold text-white text-lg mb-2">Temperatura</h3>
              <p class="text-gray-300">{planet.temperature}</p>
            </div>
            
            <div class="fact-card glass-effect rounded-xl p-6 text-center hover:transform hover:scale-105 transition-all duration-300">
              <div class="icon-container w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-gray-400 to-gray-600 flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                </svg>
              </div>
              <h3 class="font-space font-bold text-white text-lg mb-2">Lunas</h3>
              <p class="text-gray-300">{planet.moons === 0 ? 'Ninguna' : planet.moons}</p>
            </div>
            
          </div>
        </div>
      </div>
      
      <!-- Description section -->
      <div class="description-section py-16 px-6 bg-gradient-to-b from-transparent to-black">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="font-space text-3xl md:text-4xl font-bold text-star mb-8">Acerca de {planet.name}</h2>
          <p class="text-lg md:text-xl text-gray-300 leading-relaxed mb-12">{planet.description}</p>
          
          <!-- Composition and atmosphere -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
            <div class="glass-effect rounded-xl p-6">
              <h3 class="font-space font-bold text-white text-xl mb-4">Composición</h3>
              <p class="text-gray-300">{planet.composition}</p>
            </div>
            <div class="glass-effect rounded-xl p-6">
              <h3 class="font-space font-bold text-white text-xl mb-4">Atmósfera</h3>
              <p class="text-gray-300">{planet.atmosphere}</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Fun facts -->
      <div class="fun-facts py-16 px-6">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-space text-3xl md:text-4xl font-bold text-center text-star mb-12">Datos Curiosos</h2>
          <div class="space-y-6">
            {planet.funFacts.map((fact, index) => (
              <div class="glass-effect rounded-xl p-6 hover:bg-white hover:bg-opacity-5 transition-all duration-300">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gradient-to-br from-yellow-400 to-yellow-600 flex items-center justify-center">
                    <span class="font-bold text-black text-sm">{index + 1}</span>
                  </div>
                  <p class="text-gray-300 text-lg leading-relaxed">{fact}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
      
    </section>

    <!-- Enhanced Scientific Sections -->
    <PlanetComparison planet={planet} />
    <ScientificData planet={planet} />
    <DataVisualization planet={planet} />
    <SpaceMissions planet={planet} />
    
    <!-- Planet Navigation -->
    <PlanetNavigation currentPlanet={planet} />
  </main>
</Layout>

<style>
  .black-rgba {
    background-color: rgba(0, 0, 0, 0.8);
  }
  
  .animate-spin-slow {
    animation: spin 20s linear infinite;
  }
  
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .planet-header {
    background: radial-gradient(circle at center, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.8) 70%, rgba(0, 0, 0, 1) 100%);
  }
  
  .glass-effect {
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
</style>
